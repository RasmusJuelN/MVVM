<UserControl x:Class="MVVM.WPF.Views.CreateUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Text="Name" Width="100" HorizontalAlignment="left"/>
        <TextBlock Grid.Row="1" Width="100" HorizontalAlignment="Left" Margin="150, 0, 0, 0"/>
        <TextBox Grid.Row="2" Text="Name" Width="100" HorizontalAlignment="left"/>
        <TextBlock Grid.Row="2" Width="100" HorizontalAlignment="Left" Margin="150, 0, 0, 0"/>
        <TextBox Grid.Row="3" Text="Name" Width="100" HorizontalAlignment="left"/>
        <TextBlock Grid.Row="3" Width="100" HorizontalAlignment="Left" Margin="150, 0, 0, 0"/>
    </Grid>
</UserControl>
