<Application x:Class="MVVM.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:MVVM.WPF.ViewModels"
             xmlns:views="clr-namespace:MVVM.WPF.Views"
             
             xmlns:local="clr-namespace:MVVM.WPF">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewmodels:UserViewModel}">
            <views:UserView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:CarViewModel}">
            <views:CarView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LogViewModel}">
            <views:LogView/>
        </DataTemplate>

    </Application.Resources>
</Application>
